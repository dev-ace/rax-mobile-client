<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:padding="5dip" >

    <LinearLayout 
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:background="@drawable/image_bg"
        android:layout_marginRight="5dip">
        
        <ImageView 
            android:id="@+id/list_image"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:background="@drawable/container"/>
        
    </LinearLayout>

        <!-- Container Name -->
    <TextView 
        android:id="@+id/filename_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:paddingLeft="10dip"     
        android:textColor="#343434"
        android:typeface="sans"
        android:textSize="12sp"
        android:text="@string/container_name_str"
        />    
        <!-- File name -->
    <TextView 
        android:id="@+id/filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/filename_str"
        android:paddingLeft="10dip"     
        android:textColor="#343434"
        android:typeface="sans"
        android:textSize="12sp"
        android:textStyle="bold"
        />
    
    <TextView
        android:id="@+id/count_str"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filename_str"
        android:layout_marginTop="1dip"
        android:layout_toLeftOf="@+id/filename"
        android:layout_toRightOf="@+id/thumbnail"
        android:paddingLeft="10dip"
        android:text="@string/count_str"
        android:textAlignment="textEnd"
        android:textColor="#343434"
        android:textSize="12sp" />
        
        <!-- Count -->

    <TextView
        android:id="@+id/count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filename"
        android:layout_marginTop="1dip"
        android:paddingLeft="10dip"
        android:layout_toRightOf="@id/count_str"
        android:textColor="#343434"
        android:textSize="12sp" 
        
        />

